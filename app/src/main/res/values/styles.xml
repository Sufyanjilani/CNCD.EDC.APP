    <style name="material_box" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">start</item>

        <item name="android:textColor">@color/colorETPrimary</item>
        <item name="hintTextColor">@color/colorETPrimary
        </item> <!--this is when item is clicked/focused-->
        <item name="android:textColorHint">@color/colorETHints
        </item> <!--this is the default HINT text color, i.e the text in the field-->

        <!--Highlight and like hints programmatically change when forms are valid! ~Dan's 1337 hax -->
        <!--TODO: Make helper color colorETDefault when form is correct pls. -->
        <item name="android:textColorLink">@color/colorETDefault</item>
        <item name="android:textColorHighlight">@color/colorETDefault</item>


        <item name="helperTextTextColor">@color/colorETHints</item>
        <item name="errorTextColor">@color/colorETError</item>
        <item name="helperTextTextAppearance">@style/AppHelperText</item>

        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>


        <item name="boxCornerRadiusBottomStart">@dimen/material_fields_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/material_fields_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/material_fields_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/material_fields_corner_radius</item>

    </style>

