<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/panel_color"
    android:orientation="vertical"
    tools:context=".UIs.ActivitySplash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topImageView"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/splash_low" />

        <ImageView
            android:id="@+id/secondImageView"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/splash_graphic" />


    </LinearLayout>



    <com.airbnb.lottie.LottieAnimationView

        android:visibility="invisible"
        android:id="@+id/animation_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:lottie_autoPlay="true"
        app:lottie_fileName="heartbeat.json"
        app:lottie_loop="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical">


        <TextView
            android:textSize="20sp"
            android:fontFamily="@font/proxima_nova"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="All rights Â© reserved by Center for Non-Communicable Diseases"
            android:textColor="@color/Black80" />


    </LinearLayout>
</LinearLayout>